<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ex1"
        android:layout_width="312dp"
        android:layout_height="208dp"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/activityg1" />

    <ScrollView
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ex1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Form :\n 1. Stand with your feet slightly apart and hands at your waist.\n 2. Lift your left thigh with knee bent,rotate laterally,and drop to the starting position.Pause,the repeat the same for the right side.\n 3. For the next circuit,lift your thigh laterally with knee bent,rotate medially,and drop to the starting position.Pause,then repeat the same for the right side.\n 4. Control the tempo and keep your upper bod stable."
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>