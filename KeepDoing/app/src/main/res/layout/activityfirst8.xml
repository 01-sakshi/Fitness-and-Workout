<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ex23"
        android:layout_width="312dp"
        android:layout_height="208dp"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/activityg18" />

    <ScrollView
        android:layout_width="317dp"
        android:layout_height="241dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ex23">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView55"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tips :\n 1. Keep your core tight and back straight throughout the movement.\n 2. Lower your body to the ground,bring your hands off the ground and quickly push up.\n\n Breathing :\nBreathe in when coming down,breathe out when coming up.\n\n Techniques :\n 1. Tighten your shoulders.\n2. Tighten your glutes.\n3. Grab on the ground with hands wider than shoulder width apart.\n4. Leave your hands off the ground and then push up again."
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>